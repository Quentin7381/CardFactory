{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/css/home.css') }}">
{% endblock %}

{% block title %}
    Home
{% endblock %}

{% block content %}
<section class="full-screen hero">
    <h1>Print Your Custom Cards & Get Them Delivered</h1>
    <p>Design stunning cards, print them in high quality, and receive them at your doorstep. Your creativity, now in your hands.</p>
    <a href="" class="button">Get Started</a>
</section>

<section class="features">
    <h2 class="hidden">Features</h2>
    <div class="feature">
        <i class="fa-solid fa-truck fa-xl"></i>
        <h3>48h delivery</h3>
    </div>
    <div class="feature">
        <i class="fa-solid fa-print fa-xl"></i>
        <h3>High quality print</h3>
    </div>
</section>

{% endblock %}