{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/css/home.css') }}">
{% endblock %}

{% block title %}
    Home
{% endblock %}

{% block content %}
    <main>
        <section class="full-screen hero">
            <h1>
                Print your custom cards & get them delivered
            </h1>
            <p>
                Design stunning cards, print them in high quality, and receive them at your doorstep. Your creativity, now in your hands.
            </p>
            <a href="" class="button">
                Get Started
            </a>
        </section>

        <section class="features">
            <h2 class="hidden">
                Features
            </h2>
            <div class="feature">
                <i class="fa-solid fa-truck fa-xl"></i>
                <h3>
                    48h delivery
                </h3>
            </div>
            <div class="feature">
                <i class="fa-solid fa-print fa-xl"></i>
                <h3>
                    High quality print
                </h3>
            </div>
        </section>

        <section class="explaination">
            <div class="container">
                <h2>
                    How It Works
                </h2>
                <p>
                    Create your custom card in just three easy steps!
                </p>

                <ol class="steps">
                    <li class="step">
                        <h3>
                            Select a Theme
                        </h3>
                        <p>
                            Pick from a variety of stunning themes that fit your style and purpose.
                        </p>
                    </li>

                    <li class="step">
                        <h3>
                            Fill with Custom Content
                        </h3>
                        <p>
                            Personalize your card with text, images, and colors using our easy-to-use editor.
                        </p>
                    </li>

                    <li class="step">
                        <h3>
                            Order & Enjoy
                        </h3>
                        <p>
                            Once you're satisfied, place your order and receive your high-quality custom card.
                        </p>
                    </li>
                </ol>

                <a href="#" class="button center">
                    Start Creating
                </a>
            </div>
        </section>
    </main>
{% endblock %}
    