{% if card %}
    {% if editable is defined and editable %}
    <a class="card card-style-default" href="{{ path('app_card_edit', { id: card.id }) }}">
    {% else %}
    <div class="card card-style-default">
    {% endif %}

        <p class="card_title">
            {{ card.getCardTitle() }}
        </p>
        <p class="card_subtitle">
            {{ card.getCardSubtitle() }}
        </p>
        <p class="card_body">
            {{ card.getCardBody() }}
        </p>
        <div class="card_image">
            {% if card.getCardImage() %}
                
                <img src="{{ card.getCardImage() }}" alt="Card image not found">
            {% endif %}
        </div>

    {% if editable is defined and editable%}
    </a>
    {% else %}
    </div>
    {% endif %}
{% endif %}
        